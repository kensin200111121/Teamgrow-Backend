doctype html
head
  link(rel='shortcut icon', type='image/x-icon', href='./assets/icons/favicon.ico')
  style.
    body {
    margin: 0px;
    user-select: none ;
    }
    * {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    box-sizing: border-box;
    }
    .setting-panel {
    background-color: white;
    border: 1px solid gainsboro;
    border-radius: 4px;
    max-width: 500px;
    padding: 32px;
    position: fixed;
    bottom: 80px;
    left: 50%;
    transform: translateX(-50%);
    display: none;
    }
    .setting-panel.opened {
    display: block;
    }
    .setting-actions {
    border-radius: 24px;
    background-color: aliceblue;
    padding: 16px;
    position: fixed;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    cursor: pointer;
    }
    .colors {
    display: flex;
    }
    .color {
    width: 50px;
    height: 50px;
    border-radius: 4px;
    margin: 4px;
    border: 1px solid gainsboro;
    cursor: pointer;
    }
    .color.selected {
    border: 2px solid blue;
    }
    .color:hover {
    border: 1px solid blue;
    }
    .images {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 16px;
    }
    .image.selected {
    border: 2px solid blue;
    }
    .image:hover {
    border: 1px solid blue;
    }
    .image {
    border: 1px solid gainsboro;
    }
    .image img {
    width: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    cursor: pointer;
    }
    .image .image-inner {
    padding-top: 56%;
    height: 0px;
    position: relative;
    }
    label {
    display: block;
    margin-bottom: 6px;
    }
    .close-icon {
    position: absolute;
    top: 16px;
    right: 16px;
    cursor: pointer;
    }
    .container {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    }
    .container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
